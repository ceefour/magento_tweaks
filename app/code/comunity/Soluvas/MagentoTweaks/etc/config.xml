<config>
	<modules>
		<Soluvas_MagentoTweaks>
			<version>1.1.0</version>
		</Soluvas_MagentoTweaks>
	</modules>
	<frontend>
        <routers>
         <magentotweaks>
            <use>standard</use>
            <args>
               <module>Soluvas_MagentoTweaks</module>
               <frontName>magentotweaks</frontName>
            </args>
         </magentotweaks>
        </routers>
	</frontend>
	<global>
		<blocks>
			<catalog>
				<rewrite>
					<product_view>Soluvas_MagentoTweaks_Block_Productview</product_view>
				</rewrite>
			</catalog>
		</blocks>
		<helpers>
            <magentotweaks>
                <class>Soluvas_MagentoTweaks_Helper</class>
            </magentotweaks>
        </helpers>
		<models>
			<sales>
				<rewrite>
					<quote>Soluvas_MagentoTweaks_Sales_Quote</quote>
				</rewrite>
			</sales>
            <sitemap>
            	<rewrite>
            		<sitemap>Soluvas_MagentoTweaks_Model_Sitemap</sitemap>
            	</rewrite>
            </sitemap>
			<catalog>
				<rewrite>
					<product>Soluvas_MagentoTweaks_Model_Product</product>
				</rewrite>
			</catalog>
		</models>
		<routers>
            <cms>
                <rewrite>
                    <page>
                        <to>magentotweaks/cmspage</to>
						<!--
                        <override_actions>true</override_actions>
                        <actions>
                           <view><to>magentotweaks/cmspage/view</to></view>
                        </actions>
						-->
                    </page>
                </rewrite>
            </cms>
						<!--
			<catalog>
				<rewrite>
					<product>
						<to>magentotweaks/catalogproduct</to>
                        <override_actions>true</override_actions>
                        <actions>
                           <view><to>magentotweaks/catalogproduct/view</to></view>
                        </actions>
					</product>
				</rewrite>
			</catalog>
						-->
			
		</routers>
		<rewrite>
			<magentotweaks_catalogproduct>
				<from><![CDATA[#^catalog/product/#]]></from>
				<to>magentotweaks/catalogproduct/</to>
			</magentotweaks_catalogproduct>
		</rewrite>
	</global>
	<default>
		<magentotweaks>
			<catalog>
				<fullproductpath>1</fullproductpath>
				<redirectproduct>1</redirectproduct>
			</catalog>
			<cms>
				<redirecthome>1</redirecthome>
			</cms>
			<checkout>
				<register>1</register>
				<sameasbilling>1</sameasbilling>
			</checkout>
			<googlesitemap>
				<front>1</front>
				<excludehome>1</excludehome>
				<excludecookies>1</excludecookies>
			</googlesitemap>
		</magentotweaks>
	</default>
	<!--
    <blocks>
    	<checkout>
			<rewrite>
				<onepage_billing>Soluvas_MagentoTweaks_Block_Onepage_Billing</onepage_billing>
			</rewrite>
    	</checkout>
    </blocks>
	-->
</config>